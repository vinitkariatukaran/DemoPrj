<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.demoprj.View.SegmentedGroup
        android:id="@+id/DeliverySegment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        segmentedgroup:sc_border_width="1dp"
        segmentedgroup:sc_checked_text_color="#fff"
        segmentedgroup:sc_corner_radius="10dp"
        segmentedgroup:sc_tint_color="#287AAC">

        <RadioButton
            android:id="@+id/rbUndeliver"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="@string/Undeliver"
            android:button="@null"
            android:padding="10dp"
            android:gravity="center"/>

        <RadioButton
            android:id="@+id/rbDelivery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Deliver"
            android:button="@null"
            android:padding="10dp"
            android:gravity="center"/>
    </com.demoprj.View.SegmentedGroup>

    <FrameLayout
        android:id="@+id/container_delivery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff" />
</LinearLayout>